user-select(value):
    user-select: value
    -moz-user-select:value
    -webkit-user-select:value
    -ms-user-select: value

html, body, main
    margin:0
    background-color:white
    text-align:center
    height:100%

h1
    font-family:Roboto
    text-align:center
    font-size:65px
    font-weight:300
    color:black
    margin:0
    padding:15px
    user-select(none)

h3
    font-family:Roboto
    text-align:center
    font-size:30px
    font-weight:300
    color:black
    display:inline-block
    margin:0 20px
    user-select(none)

button
    display:block
    background-color:transparent
    border:1px solid black
    transition:.5s
    margin:20px auto
    padding:5px 15px
    font-family:Roboto
    text-align:center
    font-size:30px
    font-weight:300
    color:black
    &:hover
        background-color:#000
        color:white

#game-area
    background-color:black
    padding:25px
    width:30%
    margin:auto
    display: grid
    grid-gap: 25px
    grid-template-columns: 1fr 1fr

    .box
        box-sizing: border-box
        width:100%
        height:0px
        padding-top: 100%;
        transition:.2s

    #red
        background-color:#F44336
        &.flash
            background-color:#EF9A9A

    #blue
        background-color:#2196F3
        &.flash
            background-color:#81D4FA

    #green
        background-color:#39ef3b
        &.flash
            background-color:#a3ff91

    #yellow
        background-color:yellow
        &.flash
            background-color:#FDD835

@media(max-width:1000px){
    #game-area{
        width:35%
        grid-gap: 25px
        padding:25px
    }
}
@media(max-width:900px){
    #game-area{
        width:40%
        grid-gap: 25px
        padding:25px
    }
}
@media(max-width:800px){
    #game-area{
        width:45%
        grid-gap: 25px
        padding:25px
    }
}
@media(max-width:700px){
    #game-area{
        width:60%
        grid-gap: 20px
        padding:20px
    }
}
@media(max-width:500px){
    #game-area{
        width:70%
        grid-gap: 15px
        padding:15px
    }
}